<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/x50dp"
        android:layout_height="@dimen/x50dp"
        android:layout_marginStart="@dimen/x50dp"
        android:layout_marginTop="@dimen/x15dp"
        android:src="@drawable/ic_logo"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_footer" />

    <ImageView
        android:id="@+id/ivMinistryLogo"
        android:layout_width="@dimen/x50dp"
        android:layout_height="@dimen/x50dp"
        android:layout_marginStart="@dimen/x20dp"
        android:layout_marginTop="@dimen/x15dp"
        android:src="@drawable/ministry_icon"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMinistryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x20dp"
        android:layout_marginTop="@dimen/x15dp"
        android:src="@drawable/ministry_text"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/ivMinistryLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20dp"
        android:layout_marginEnd="@dimen/x20dp"
        android:fontFamily="@font/regular_font"
        android:text="@string/cerqel_version"
        android:textColor="@color/blue_grey"
        android:textSize="@dimen/x12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1_5dp"
        android:layout_marginStart="@dimen/x24_5dp"
        android:layout_marginEnd="@dimen/x24_5dp"
        android:layout_marginBottom="@dimen/x10dp"
        android:background="@color/tab_unselected_text_color"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>