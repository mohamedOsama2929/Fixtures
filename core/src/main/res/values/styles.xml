<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/blue_grey</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/blue_grey</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="MaterialAppTheme.NoBackgroundColor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        .
        <item name="android:textColorHint">@color/blue_grey</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <style name="TextInputLayout.DropDownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="materialThemeOverlay">@style/OverlayFilledPadding</item>
    </style>

    <style name="OverlayFilledPadding" parent="ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="autoCompleteTextViewStyle">@style/OutlineBox_padding</item>
    </style>

    <style name="OutlineBox_padding" parent="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox.Dense">
        <!-- padding -->
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="errorTextAppearance">
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="FilerPickerTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="tabStyle">@style/PickerTabLayout</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <!--<item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar.Light</item>-->
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="PickerTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <!--        tab background-->
        <item name="tabBackground">@color/colorPrimary</item>
        <!--        tab text color selector : set selector accordingly to dark or light theme-->
        <item name="tabTextColor">@color/file_picker_selector</item>
        <!--        tab indicator color: set indicator color accordingly-->
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Toolbar.Primary" parent="">
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_top_corners</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_trans</item>
    </style>

    <!--    parent="@android:style/TextAppearance.Widget.TabWidget">-->
    <style name="tabLayoutTextApperance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/medium_font</item>
        <item name="textSize">@dimen/x14sp</item>
    </style>


    <style name="text_input_edit_text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="hintTextColor">#698097</item>
        <item name="hintTextAppearance">@style/text_input_layout_hint_text_aaperance</item>
    </style>

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="errorTextColor">#e26666</item>
        <item name="boxStrokeErrorColor">#e26666</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintEnabled">false</item>
        <item name="strokeWidth">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxBackgroundColor">@color/etBgColor</item>
        <item name="background">@color/etBgColor</item>
        <item name="hintTextAppearance">@style/text_input_layout_hint_text_aaperance</item>
        <item name="placeholderTextAppearance">@style/text_input_layout_hint_text_aaperance</item>d
        <item name="hintTextColor">#698097</item>
        <item name="errorTextAppearance">@style/text_input_error_text_style</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="text_input_layout_hint_text_aaperance">
        <item name="android:fontFamily">@font/light_font</item>
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_input_error_text_style">
        <item name="fontFamily">@font/light_font</item>
        <item name="android:textColor">#e26666</item>
        <item name="android:textSize">@dimen/x12sp</item>
    </style>


    <style name="primary_button">
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="cancel_button">
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textColor">@color/colorClose</item>
        <item name="android:background">@drawable/bg_btn_cancel</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="tReg14White">
        <item name="fontFamily">@font/light_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x14sp</item>
    </style>

    <style name="tReg12BlackText">
        <item name="fontFamily">@font/regular_font</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">@dimen/x12sp</item>
    </style>

    <style name="tsMed12ColorText">
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/x12sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="tsReg10BodyGray">
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextDetails</item>
    </style>

    <style name="tsReg12ColorText">
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextDetails</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="tsMed14TextColorSubtitle">
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="tsReg14TextBodyGray">
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlackText</item>

    </style>

    <style name="tsMed10TextColorSubtitle">
        <item name="android:fontFamily">@font/medium_font</item>
        <item name="android:textSize">@dimen/x10sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>


</resources>
